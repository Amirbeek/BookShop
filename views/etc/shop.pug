extends layouts/main-layout.pug
block styles
    link(rel="stylesheet", href="/css/style/shop.css")
block content
    main
        if prods.length > 0
            .grid
                    article.card.product-item
                        header.card__header
                            h1.product_title #{product.title}
                        div.card__image
                            img(src='https://via.placeholder.com/150', alt='Shop Image')
                        div.card__content
                            h2.product_price $19.90
                            p.product__description Lorem ipsum dolor sit amet, consectetur adipisicing elit. Dolorem harum mollitia necessitatibus repellat ut.
                        .card__actions
                            button.btn Add To Cart
        else
            h1 No Products Found