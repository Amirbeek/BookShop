<%- include('../includes/head.ejs') %>
<%- include('../includes/navigation.ejs') %>
<link rel="stylesheet" href="/css/style/order.css">

<main class="orders-container">
    <h1 class="orders-title">Your Orders</h1>
    <% if (orders && orders.length > 0) { %>
        <ul class="orders-list">
            <% orders.forEach(order => { %>
                <li class="order-item">
                    <h2 class="order-id">Order #<%= order._id %></h2>
                    <ul class="order-products">
                        <% order.products.forEach(item => { %>
                        <li class="product-item">
                            <span class="product-title"><%= item.productData.title %></span> <!-- Access 'productData' -->
                            <span class="product-quantity">(<%= item.quantity %>)</span> <!-- 'quantity' for the count -->
                        </li>
                        <% }) %>
                    </ul>
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <h2 class="no-orders">No orders found.</h2>
    <% } %>
</main>
<%- include('../includes/end.ejs') %>
