
<%- include('../includes/head.ejs') %>
<%- include('../includes/navigation.ejs') %>
<link rel="stylesheet" href="/css/style/shop.css">
</head>
<body>
<main>
    <% if (prods.length > 0 ){%>

    <div class="grid">
        <% for(let product of prods ){ %>

            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product_title"><%= product.title %></h1>
                </header>
                <div class="card__image">
                    <img src="<%= product.imgUrl %>" alt="Shop Image">
                </div>
                <div class="card__content">
                    <h2 class="product_price">$<%= product.price %></h2>
                    <p class="product__description"><%= product.title %></p>
                </div>
                <div class="card__actions">
                    <a href="/products/<%=product.id%>" class="btn">Details</a><br><br>
                    <%- include('../includes/addToCart.ejs', { product: product }) %>
                </div>
            </article>

        <% }%>

        <% }else{  %>
            <h1>No Products Found</h1>
        <% } %>
    </div>
</main>
<%- include('../includes/end.ejs') %>


